
display_error() {
  	echo "Scriptul se executa astfel: $0 [5 / 10 / 30]"
	exit 1
}

if [ $# -ne 1 ]
	then
		display_error
else
	choosed=0
	case $1 in
		5)
		 choosed=5
		;;
		10)
		 choosed=10
		;;
		30)
		 choosed=30
		;;
		*)
		display_error
		;;
	esac

	echo "Choosed is $choosed"

	systemctl enable --now atd.service

	https://www.youtube.com/watch?v=v6F3pEdKNkw&ab_channel=storytellersstorytellers
fi
